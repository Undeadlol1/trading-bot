datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model BuySellRepeatBot {
  buyAt                 Float
  sellAt                Float
  initialBalance        Float
  currentBalance        Float
  amountToBuy           Float
  symbolToBuy           String
  symbolToBuyFor        String
  hasBought             Boolean @default(false)
  hasSold               Boolean @default(false)
  isActive              Boolean @default(false)
  isPaperTradingEnabled Boolean @default(false)

  limitOrders Order[]
  results     BuySellRepeatBotRunResult[]

  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BuySellRepeatBotRunResult {
  initialBalance Float
  currentBalance Float

  botId String
  bot   BuySellRepeatBot @relation(fields: [botId], references: [id])

  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  price    Float
  amount   Float
  symbol   String
  type     OrderType
  side     OrderSide
  isFilled Boolean   @default(false)

  botId String
  bot   BuySellRepeatBot @relation(fields: [botId], references: [id])

  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("LimitOrder")
}

enum OrderType {
  LIMIT
  MARKET
}

enum OrderSide {
  BUY
  SELL
}
